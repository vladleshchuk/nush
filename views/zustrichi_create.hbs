<div class="container" style="min-height: 50vh">
  <div class="row">
    <div class="col-6 text-center mx-auto">
        <h2 class="text-dark">Зустрічі <br> (новий запис)</h2>
      <form method="post" name="form1">
            <div class="form-group">
            <label for="id_spikery">Спікер</label>
                <input list="id" class="form-control" name="id_spikery"
                placeholder="Вкажіть спікера" autocomplete="off">
            <datalist id="id">
                {{#each spikery}}
                <option value="{{this.id_spikery}}">
                {{this.prizvyshche}}
                </option>
                {{/each}}
            </datalist>
        </div>
        <div class="form-group">
          <label for="nazva_zustrichi">Назва зустрічі</label>
          <input type="text" class="form-control" name="nazva_zustrichi" placeholder="Вкажіть назву">
        </div>
        <div class="form-group">
          <label for="data_pochatku">Дата початку</label>
          <input type="date" class="form-control" name="data_pochatku" placeholder="Початок">
        </div>
        <div class="form-group">
          <label for="data_zakinchennya">Дата закінчення</label>
          <input type="date" class="form-control" name="data_zakinchennya" placeholder="Закінчення">
        </div>
        <input type="hidden" name="MM_insert" value="form1" />
        <button type="submit" class="btn btn-dark mx-2 my-2">Зберегти</button>
        <button type="reset" class="btn btn-dark">Очистити</button>
      </form>
    </div>
  </div>
</div>
