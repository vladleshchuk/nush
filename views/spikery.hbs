<div class="container-fluid" style="min-height: 50vh">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="text-dark">Спікери</h1>
        </div>
    </div>


{{#if spikery_visible}}
<div class="row">
    <div class="col-12 text-center">
        <h2 class="text-dark">Галузь &#8220;{{nazva_galuzi}}&#8221;</h2>
    </div>
</div>
{{else}}

<div class="col-6 text-center mx-auto">
    <form method="post" class="form-inline">
        <div class="form-group mx-auto">
            <div class="form-group">
                <div class="input-group-text">По галузі</div>
                <div class="form-group">
                    <input list="id" class="form-control" name="nazva_galuzi" 
                           placeholder="Виберіть галузь" autocomplete="off">
                </div>
                <datalist id="id">
                    {{#each spikery}}
                        <option value="{{this.nazva_galuzi}}"></option>
                    {{/each}}
                </datalist>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mx-1 my-2">Показати</button>
        </div>
    </form>
</div>
{{/if}}

{{#if spikery_visible}}
<div class="text-right">
    <a href="/spikery_create" class="btn btn-info btn-sm my-2">Додати запис</a>
</div>

<div class="row">
    {{#each spikery}}
    <div class="card text-center col-md-3">
        <div class="card-header">Код співробітника {{this.id_spikery}}</div>
        <div class="card-body">
            <h5 class="card-title">{{this.prizvyshche}}</h5>
            <p class="card-text">{{this.imya}} {{this.pobatkovi}}</p>
        </div>
        <div class="card-footer text-muted">
            <form action="/spikery_delete/{{this.id_spikery}}" method="POST" style="display:inline;">
                <input type="submit" value="Видалити" class="btn btn-danger btn-sm"/>
            </form>
            <a href="/spikery_edit/{{this.id_spikery}}" class="btn btn-success btn-sm">Редагувати</a>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}
</div>